{
  "info": {
    "name": "CPMS Host Program API",
    "_postman_id": "7a3f3bca-0b11-4f06-9e79-3e7f6e8f13c1",
    "description": "CPMS 客户端与主机端程序（内网数据服务进程）接口集合。",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://127.0.0.1:8080/api/v1" },
    { "key": "accessToken", "value": "" },
    { "key": "refreshToken", "value": "" },
    { "key": "archiveId", "value": "ar_001" },
    { "key": "assetId", "value": "as_001" },
    { "key": "materialId", "value": "mt_001" },
    { "key": "userId", "value": "u_001" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"superadmin\",\n  \"password\": \"<PASSWORD>\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('login status is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "var json = pm.response.json();",
                  "if (json && json.data) {",
                  "  if (json.data.access_token) pm.collectionVariables.set('accessToken', json.data.access_token);",
                  "  if (json.data.refresh_token) pm.collectionVariables.set('refreshToken', json.data.refresh_token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Refresh",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/auth/refresh",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh_token\": \"{{refreshToken}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('refresh status is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "var json = pm.response.json();",
                  "if (json && json.data && json.data.access_token) {",
                  "  pm.collectionVariables.set('accessToken', json.data.access_token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": "{{baseUrl}}/auth/logout"
          }
        },
        {
          "name": "Change Password",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/auth/change-password",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"old_password\": \"<OLD>\",\n  \"new_password\": \"<NEW>\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "AdminUsers",
      "item": [
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": "{{baseUrl}}/admin/users?status=ACTIVE&page=1&page_size=20"
          }
        },
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/admin/users",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin02\",\n  \"password\": \"<PASSWORD>\",\n  \"role\": \"ADMIN\"\n}"
            }
          }
        },
        {
          "name": "Update User Status",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/admin/users/{{userId}}/status",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"DISABLED\",\n  \"confirm_password\": \"<PASSWORD>\"\n}"
            }
          }
        },
        {
          "name": "Reset User Password",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/admin/users/{{userId}}/reset-password",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"new_password\": \"<NEW_PASSWORD>\",\n  \"confirm_password\": \"<PASSWORD>\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Archives",
      "item": [
        {
          "name": "Create Archive",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Idempotency-Key", "value": "idemp-001" }
            ],
            "url": "{{baseUrl}}/archives",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"province_code\": \"GD\",\n  \"full_name\": \"张三\",\n  \"birth_date\": \"1990-01-15\",\n  \"gender_code\": \"M\",\n  \"height_cm\": 175.5,\n  \"passport_no\": \"P123456789\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('create archive status is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "var json = pm.response.json();",
                  "if (json && json.data && json.data.archive_id) {",
                  "  pm.collectionVariables.set('archiveId', json.data.archive_id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "List Archives",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": "{{baseUrl}}/archives?page=1&page_size=20"
          }
        },
        {
          "name": "Get Archive",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": "{{baseUrl}}/archives/{{archiveId}}"
          }
        },
        {
          "name": "Update Archive",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/archives/{{archiveId}}",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"full_name\": \"张三（更新）\",\n  \"height_cm\": 176.0,\n  \"remark\": \"manual update\"\n}"
            }
          }
        },
        {
          "name": "Change Archive Status",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/archives/{{archiveId}}/status",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"SUSPENDED\",\n  \"remark\": \"manual review\"\n}"
            }
          }
        }
      ]
    },
    {
